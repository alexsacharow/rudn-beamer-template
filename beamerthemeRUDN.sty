\usepackage[math-style=french]{unicode-math}
\setmainfont{Inter}
\setsansfont{Inter}
\setmonofont[Scale=MatchLowercase]{IBM Plex Mono}
\setmathfont[Scale=MatchLowercase]{Concrete Math}
